{
	"name": "@tldraw/node-server-example",
	"description": "A tiny little drawing app (example node server).",
	"version": "0.0.0",
	"private": true,
	"author": {
		"name": "tldraw GB Ltd.",
		"email": "hello@tldraw.com"
	},
	"main": "./src/server/server.ts",
	"scripts": {
		"dev-server": "yarn run -T tsx watch ./src/server/server.ts",
		"dev-client": "vite dev",
		"dev": "concurrently -n server,client -c red,blue \"yarn dev-server\" \"yarn dev-client\"",
		"test-ci": "lazy inherit",
		"test": "yarn run -T jest",
		"test-coverage": "lazy inherit",
		"lint": "yarn run -T tsx ../../scripts/lint.ts"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"concurrently": "^8.2.2",
		"lazyrepo": "0.0.0-alpha.27",
		"typescript": "^5.3.3"
	},
	"jest": {
		"preset": "config/jest/node",
		"moduleNameMapper": {
			"^~(.*)": "<rootDir>/src/$1"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!(nanoid|escape-string-regexp)/)"
		]
	},
	"dependencies": {
		"@fastify/cors": "^9.0.1",
		"@fastify/websocket": "^10.0.1",
		"@tldraw/sync": "workspace:*",
		"@tldraw/sync-core": "workspace:*",
		"@vitejs/plugin-react-swc": "^3.7.0",
		"cheerio": "^1.0.0-rc.12",
		"express": "^4.19.2",
		"fastify": "^4.28.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.24.1",
		"tldraw": "workspace:*",
		"vite": "^5.3.3",
		"ws": "^8.16.0"
	}
}
